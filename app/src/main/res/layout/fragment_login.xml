<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.infroid.samarpan.LoginFragment"
    android:background="@drawable/custom_bg"
    android:clickable="true"
    android:textAlignment="center">

    <TextView
        android:id="@+id/txtSamarpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Samarpan"
        android:textSize="30sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="36dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card:contentPadding="10dp"
        card:cardCornerRadius="10dp"
        card:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:drawableLeft="@android:drawable/sym_action_email"
                android:layout_marginTop="10dp"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/email"
                android:layout_gravity="center_horizontal"
                android:hint="Email...."
                android:fontFamily="Roboto"/>

            <EditText
                android:drawableLeft="@android:drawable/ic_lock_idle_lock"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password"
                android:layout_gravity="center_horizontal"
                android:hint="Password..."
                android:fontFamily="Roboto"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:id="@+id/btnLogin"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center_horizontal"
                    android:elevation="10dp"
                    android:background="@color/colorBlue"
                    android:translationZ="5dp"/>

                <Button
                    android:textColor="@color/colorWhite"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password ?"
                    android:background="@color/colorSecondary"
                    android:id="@+id/btnForgot"
                    />
            </LinearLayout>

            <!--<Button-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:padding="10dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/colorTeal"-->
            <!--android:text="Don&apos;t Have an Account? Register"-->
            <!--android:id="@+id/btnRegister"-->
            <!--android:layout_gravity="center_horizontal"/>-->

            <TextView
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="center_horizontal"
                android:text="Don&apos;t Have an Account? Register"
                android:padding="10dp"
                android:textColorLink="@color/colorBlue"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
