<?xml version="1.0" encoding="UTF-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardElevation="10dp"
    card_view:cardBackgroundColor="@color/colorLightest"
    card_view:cardCornerRadius="10dp"
    card_view:contentPadding="10dp"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout1"
        android:orientation="vertical">
        <TextView
            android:textSize="20sp"
            android:id="@+id/listName"
            android:layout_gravity="center_vertical"
            android:text="Rajat Srivastava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/hv1"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/listName"
            android:background="@color/colorPrimaryDark">

        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/headingDOB"
            android:ems="10"
            android:textStyle="bold"
            android:layout_below="@+id/listName"
            android:text="Age: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listDOB"
            android:layout_below="@+id/listName"
            android:layout_toEndOf="@+id/headingDOB"
            android:hint="8 July 1965"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/headingRetirement"
            android:ems="10"
            android:textStyle="bold"
            android:layout_below="@+id/listDOB"
            android:text="Retirement: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listRetirement"
            android:layout_below="@+id/listDOB"
            android:layout_toEndOf="@+id/headingRetirement"
            android:hint="19 April 2011"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/headingExpertise"
            android:ems="10"
            android:textStyle="bold"
            android:layout_below="@+id/listRetirement"
            android:text="Expertise In: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listExpertise"
            android:layout_below="@+id/listRetirement"
            android:layout_toEndOf="@+id/headingExpertise"
            android:hint="The world heritage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/headingInterests"
            android:ems="10"
            android:textStyle="bold"
            android:layout_below="@+id/listExpertise"
            android:text="Interests: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listInterests"
            android:layout_below="@+id/listExpertise"
            android:layout_toEndOf="@+id/headingExpertise"
            android:hint="Lead Developer and the manager of the company"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/headingAddress"
            android:text="Permanent Address: "
            android:ems="10"
            android:textStyle="bold"
            android:layout_below="@+id/listInterests"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listAddress"
            android:layout_marginBottom="5dp"
            android:text="Noida, Uttar Pradesh, India"
            android:layout_toEndOf="@+id/headingAddress"
            android:layout_below="@+id/listInterests"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editCitizen"
            android:text="Edit"
            android:ems="5"
            android:tag=""
            android:layout_margin="2dp"
            android:layout_below="@+id/listAddress"
            android:background="@color/colorSecondary"
            android:textColor="@color/colorWhite"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewCitizen"
            android:text="Full Profile"
            android:layout_below="@+id/listAddress"
            android:layout_toEndOf="@+id/editCitizen"
            android:background="@color/colorIndigo"
            android:ems="8"
            android:layout_margin="2dp"
            android:tag=""
            android:textColor="@color/colorWhite"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resumeCitizen"
            android:text="Resume"
            android:layout_margin="2dp"
            android:layout_below="@+id/listAddress"
            android:layout_toEndOf="@+id/viewCitizen"
            android:background="@color/colorTeal"
            android:ems="5"
            android:tag=""
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>