<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.infroid.samarpan.ForgotPasswordFragment">

    <TextView
        android:id="@+id/txtContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card:contentPadding="10dp"
        card:cardCornerRadius="10dp"
        card:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:drawableLeft="@android:drawable/ic_menu_sort_alphabetically"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:layout_marginTop="10dp"
                android:hint="Name..."/>
            <EditText
                android:drawableLeft="@android:drawable/sym_action_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:hint="Email Address..."
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="8"
                android:id="@+id/message"
                android:hint="Message..."
                android:layout_marginTop="10dp"/>
            <Button
                android:drawableRight="@android:drawable/ic_menu_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorSecondary"
                android:textColor="@color/colorWhite"
                android:padding="10dp"
                android:id="@+id/btnSend"
                android:layout_gravity="center_horizontal"
                android:text="Send Message"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
